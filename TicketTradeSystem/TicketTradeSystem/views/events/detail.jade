extends ../layout
block scripts
    script.
        nickname="#{nick}";
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/chat.js')

block content
    h1=title
    h2 #{event.location}, #{event.city}
    h3 #{event.date} - #{event.time}
    div(style="background-image: url('"+event.pictureUrl+"')", class="posterimg event")
    p 
        b € !{parseFloat(Math.round(event.price * 100) / 100).toFixed(2)}
    p.description.event !{event.description.replace(/\n/g, '<br/>')}
    each val in event.tags
        span.tag=val
    h4 Group Chat
    textarea#Text(readonly)
    input#input(type='text', autofocus)
    button#chat(type='submit') Send Message
    textarea#Clients(readonly)