doctype
html( lang="en" )
    head
        title #{title} | TicketTrade
        meta( charset='utf-8' )
        meta( http-equiv='X-UA-Compatible', content='IE=edge' )
        meta( name='viewport', content='width=device-width, initial-scale=1.0' )
        meta( name='description', content='TicketTradeSystem' )
        //- Bootswatch Theme
        link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
        link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css", rel="stylesheet")
        link(href="/stylesheets/style.css", rel="stylesheet")
    body
        nav.navbar.navbar-default( role="navigation" )
            .navbar-header
                button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="#") TicketTrade
 
            #navbar-inverse.collapse.navbar-collapse
                ul.nav.navbar-nav
                    - if (!isAuthenticated)
                        li(class=title=='Welcome'?'active':undefined)
                            a(href="/") Welcome
                        li(class=title=='Sign in'?'active':undefined)
                            a(href="/login") Sign in
                        li(class=title=='Sign up'?'active':undefined)
                            a(href="/signup") Sign up
                    - else
                        li(class=title=='Tickets'?'active':undefined)
                            a( href="/tickets" ) Tickets
                        li(class=title=='Events'?'active':undefined)
                            a( href="/events" ) Events
                        li.dropdown(class=title=='Profile'|title=='My Tickets'?'active':undefined)
                            a.dropdown-toggle( href="#", data-toggle="dropdown", role="button", aria-expanded="false" ) Profile
                                span.caret
                            ul.dropdown-menu( role="menu" )
                                li: a( href="/tickets/mytickets" ) Manage my tickets
                                li.divider
                                li.dropdown-header My profile
                                li: a( href="/profile" ) Change details
                                li: a( href="/logout" ) Sign out
        .container
            block content
        script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
        script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )