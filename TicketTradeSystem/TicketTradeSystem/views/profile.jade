extends layout

block content
    h1 #{title}
    if (messages)
        if (messages.length > 0)
            .alert.alert-dismissable.alert-danger
                button.close( type="button", data-dismiss="alert" ) x 
                | #{messages}
    form(role='form',action='/profile',method='post')
        .form-group
            label(for='firstname') First name:
            input(type='text',name='firstname', class='form-control', value="#{user.local.firstname}")
        .form-group
            label(for='lastname') Last name:
            input(type='text',name='lastname', class='form-control', value="#{user.local.lastname}")
        .form-group
            label(for='city') City:
            input(type='text',name='city', class='form-control', value="#{user.local.city}")
        .form-group
            label(for='email') Email address:
            input(type='email',name='email', class='form-control', value="#{user.local.email}")
        .form-group
            label(for='password') Password:
            input(type='password',name='password', class='form-control', required)
        button(type='submit', class='btn btn-default') Change