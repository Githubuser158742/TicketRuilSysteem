extends ../layout

block content
    h1=title
    a.btn.btn-primary(href="/tickets/new", style="margin-bottom: 10px;") Add new ticket
    .row
        - for(var ticket in ticketslistuser) {
        .col-md-3
            p 
                b 
                    =ticketslistuser[ticket].name
            p  
                    =ticketslistuser[ticket].description
            a.btn.btn-info(href="/tickets/#{ticketslistuser[ticket]._id}") Show
            &nbsp;
            a.btn.btn-warning(href="/tickets/#{ticketslistuser[ticket]._id}/edit") Edit
            &nbsp;
            a.btn.btn-danger(href="/tickets/#{ticketslistuser[ticket]._id}/delete") Delete
        - };