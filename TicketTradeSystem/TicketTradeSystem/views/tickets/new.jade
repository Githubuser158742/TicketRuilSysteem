extends ../layout

block content
    h1 #{title}
    form(role='form',action='/tickets',method='post')
        #form-group
            label(for='eventid') Event:
            select(name='eventid', class="form-control")
                - for (var item in eventslist) {
                option(value="#{eventslist[item]._id}") #{eventslist[item].name}
                - };
        #form-group
            label(for='price') Price:
            input(type='number',name='price', class='form-control', min='0', step='0.01')
        #form-group
            label(for='amount') Amount:
            input(type='number',name='amount', class='form-control', min='0', step="1")
        button(type='submit', class='btn btn-default') Add Ticket