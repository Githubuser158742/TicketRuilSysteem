extends ../layout

block content
    h1=title
    h2=ticket._event.name
    form(role='form',action='/tickets/#{ticket.id}/edit',method='post')
        .form-group
            label(for='price') Price:
            input(type='number',name='price', value='#{ticket.price}', class='form-control', min='0', step='0.01')
        .form-group
            label(for='amount') Amount:
            input(type='number',name='amount', value='#{ticket.amount}', class='form-control', min='0', step="1")
        button(type='submit', class='btn btn-default') Edit Ticket